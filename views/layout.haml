!!! 5
%html
  %head
    %title #{t.general.title}
    %meta{:charset => 'utf-8'}
    %meta{:name => 'author', :content => 'Fernando Briano, DrummerHead'}
    %meta{:name => 'viewport', :content => 'width=device-width'}
    %link{:rel =>'stylesheet', :href =>'/style.css'}
  %body
    %header{:role => 'banner'}
      .vessel
        %a{:href => "/", :id => 'brand'}
          %img{:src => '/images/arte-uruguaya-logo.png', :alt => 'Arte Uruguaya', :title => t.general.title}
        %nav
          %ol{:role => 'navigation'}
            %li
              %a{:href => '/acerca/', :rel => 'external'}
                Acerca
            %li
              %a{:href => '/datos-abiertos/', :rel => 'external'}
                Datos Abiertos
            %li
              %a{:href => 'http://www.mnav.gub.uy/cms.php', :rel => 'external'}
                Museo Nacional de Artes Visuales
            %li
              %a{:href => '/contacto/', :rel => 'external'}
                Contacto
          %form
            %input{:type => 'text', :placeholder => 'Buscar Obras o Artistas'}
            %button{:type => 'submit'}
              Buscar
        .language
          - if r18n.locale.code == "es"
            %a{:href => request.path_info + "?locale=en", :title => "English"}
              %img{:src => "/images/english.jpg"}
          - if r18n.locale.code == "en"
            %a{:href => request.path_info + "?locale=es", :title => "EspaÃ±ol"}
              %img{:src => "/images/espanol.jpg"}

    %div{:role => 'main'}
      .vessel
        =yield

    %footer{:role => 'contentinfo'}
      .vessel
        %ul
          %li
            Arte Uruguaya &#169; 2012
          %li
            Creado por
            %a{:href => 'http://cuboxlabs.com/', :rel => 'external'}
              Cubox Labs
          %li
            Open Source Project,
            %a{:href => "https://github.com/picandocodigo/mnav-opendata-api", :rel => 'external'}
              Fork it on Github
          %li
            &#9829;
