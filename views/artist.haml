%h3
  #{@artist['display_name']}
%ul
  %li
    %strong 
    #{@artist['name']}
    %br
    %strong #{t.artist.birth}
    #{@artist['birth']}
  - if @artist['biography']
    %li
      %strong #{t.artist.bio}
      #{@artist['biography']}
  %li
    %strong #{t.artist.artworks}
    - if @artist['artworks']
      %ul
        - @artist['artworks'].each do |artwork|
          %li #{artwork['title']}
          - if artwork['year'] && artwork['year'] != 0
            #{artwork['year']}

%form{:action=>"/search_wikipedia", :method=>:post}
  %input{:type=>"hidden", :id=>"name", :name => "name", :value=>escape(@artist['display_name'])}
  %input{:type=>"submit", :value=>t.general.wikipedia}