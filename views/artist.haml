%h3
  #{@artist['display_name']}
%ul
  %li Full name: #{@artist['name']}
  %li Year of birth: #{@artist['birth']}
  - if @artist['biography']
    %li Biography: #{@artist['biography']}
  %li Artworks:
  - if @artist['artworks']
    %ul
    - @artist['artworks'].each do |artwork|
      %li #{artwork['title']}
      - if artwork['year']
        #{ artwork['year']}